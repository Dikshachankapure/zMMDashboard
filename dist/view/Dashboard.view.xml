								<core:Item key="HCM" text="Human Capital Management"/>
								<core:Item key="PP" text="Production Planning"/>-->
							</Select>
						</Toolbar>
					</subHeader>
					<content>
						<Panel id="panel1" expandable="true" visible="true" expanded="true" headerText="Sales" width="auto" class="sapUiResponsiveMargin">
							<content>
								
								<StandardTile icon="sap-icon://pie-chart" number="5" title="Sales Documents" info="Sales" infoState="Success"/>
								<StandardTile icon="sap-icon://pie-chart" number="10" title="Delivery Documents" info="Sales" infoState="Success"/>
								<StandardTile icon="sap-icon://pie-chart" number="15" title="Billing Documennts" info="Sales" infoState="Success"/>
								
							</content>
						</Panel>
						<Panel id="panel2" expandable="true" visible="false" expanded="true" headerText="Materials Management" width="auto"
