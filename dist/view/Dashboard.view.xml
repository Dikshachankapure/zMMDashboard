								<StandardTile icon="sap-icon://pie-chart" number="15" title="Purchase Contracts" info="Materials Management" infoState="Success"/>
								<StandardTile icon="sap-icon://pie-chart" number="20" title="Materials" info="Materials Management" infoState="Success"/>
