	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<subHeader>
						<Toolbar>
							<ToolbarSpacer/>
							<Label text="Line of Business"/>
							<Select id="drpLOB" change="_onChangeLOB">
								<core:Item key="SD" text="Sales"/>
								<core:Item key="MM" text="Materials Management"/>
