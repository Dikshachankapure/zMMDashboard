								<StandardTile icon="sap-icon://pie-chart" number="20" title="Invoices" info="Materials Management" infoState="Success"/>
							</content>
						</Panel>
						<Panel id="panel3" expandable="true" visible="false" expanded="true" headerText="Finance" width="auto" class="sapUiResponsiveMargin">
							<content>
